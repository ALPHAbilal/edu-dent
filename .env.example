# API Keys for AI Models
# At least one of these is required for AI generation
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Pinecone Configuration (for RAG system)
# Sign up at https://pinecone.io for free tier
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=eduviz-rag

# ChromaDB Configuration (alternative to Pinecone)
# Default: http://localhost:8000
CHROMA_PATH=http://localhost:8000

# Feature Flags
NEXT_PUBLIC_API_CONFIGURED=true

# Budget Limits (optional, in USD)
HOURLY_BUDGET_LIMIT=5
DAILY_BUDGET_LIMIT=50
MONTHLY_BUDGET_LIMIT=400

# Model Preferences (optional)
# Options: cost_optimized, balanced, quality_focused
DEFAULT_OPTIMIZATION_GOAL=balanced

# Logging and Monitoring (optional)
ENABLE_COST_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true